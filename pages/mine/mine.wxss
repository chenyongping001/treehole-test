/* pages/mine/mine.wxss */
@import "/pages/bottom_menu/bottom_menu";
page{
  background-color:white;
}
.scbg{
  background-color:#efefef;
  width: 100%;
  height: 91%;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  position:absolute;
}
.box{
  width: 100%;
  background-color: white;
  padding-top: 30rpx;
}

.firstblock{
  height: 300rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items:center;
  border-bottom: 20rpx solid #efefef
}

.touxiang{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  margin: auto;
}

.person{
  width: 75%;
  height: 130rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.name{
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  font-size: 40rpx;
  flex-direction: row;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.tel{
  display: flex;
  justify-content: flex-start;
  margin-top: 35rpx;
  flex-direction: row;
}

.showname{
  font-size: 34rpx;
  color: #3f51b5;
  font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  font-weight:bold;
}

.showtime{
  font-size: 25rpx;
  color: #5e5d5d;
}

.secondblock{
  margin-top: 10rpx;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
  border-bottom: 5rpx solid #bbbbbb;
}

.content{
  font-size: 29rpx;
  color: #101010;
  word-break: break-all;
}

.thirdblock{
  height: 100rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
}

.like{
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.num{
  height: 52rpx;
  line-height: 52rpx;
  margin-top: 25rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #101010;
}

.delete{
  height: 52rpx;
  width: 150rpx;
  display: flex;
  justify-content: center;
  line-height: 52rpx;
  background-color:red;
  border-radius: 10rpx;
  margin-top: 25rpx;
  margin-right: 50rpx;
  font-size: 30rpx;
  right:0rpx;
  position: absolute;
}